; visible tile area
SCREEN_NUM_COLUMNS		equ 28
SCREEN_NUM_ROWS			equ 36

; total tile area
SCREEN_TILES_PER_COLUMN		equ 32
SCREEN_TILES_PER_ROW		equ 64

SCREEN_BYTES_PER_TILE		equ 1
SCREEN_BYTES_PER_ROW		equ (SCREEN_BYTES_PER_TILE * SCREEN_TILES_PER_ROW)

	macro	SEEK_XY
		ldx	#(FIX_TILE + $74f + (\2 * SCREEN_BYTES_PER_TILE) - (\1 * SCREEN_BYTES_PER_ROW))
	endm
