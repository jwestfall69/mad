; visible tile area
SCREEN_NUM_COLUMNS		equ 32
SCREEN_NUM_ROWS			equ 28

; total tile area
SCREEN_TILES_PER_COLUMN		equ 32
SCREEN_TILES_PER_ROW		equ 32

SCREEN_BYTES_PER_TILE		equ 2
SCREEN_BYTES_PER_ROW		equ (SCREEN_BYTES_PER_TILE * SCREEN_TILES_PER_ROW)

	macro SEEK_XY
		lea	(FG_RAM + 128 + (\1 * SCREEN_BYTES_PER_TILE) + (\2 * SCREEN_BYTES_PER_ROW)), a6
	endm

	macro SCREEN_UPDATE
		move.w	d0, MMIO_SCREEN_UPDATE
	endm
