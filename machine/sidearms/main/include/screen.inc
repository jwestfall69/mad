; visible tile area
SCREEN_NUM_COLUMNS		equ 48
SCREEN_NUM_ROWS			equ 28

; total tile area
SCREEN_TILES_PER_COLUMN		equ 28
SCREEN_TILES_PER_ROW		equ 64

SCREEN_BYTES_PER_TILE		equ 1
SCREEN_BYTES_PER_ROW		equ (SCREEN_BYTES_PER_TILE * SCREEN_TILES_PER_ROW)

	macro	SEEK_XY
		ld	hl, FIX_TILE + $88 + (\1 * SCREEN_BYTES_PER_TILE) + (\2 * SCREEN_BYTES_PER_ROW)
	endm
